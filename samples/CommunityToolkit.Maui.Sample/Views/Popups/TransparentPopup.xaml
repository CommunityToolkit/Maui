<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup
    x:Class="CommunityToolkit.Maui.Sample.Views.Popups.TransparentPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Color="Transparent">

    <Grid RowDefinitions="96, *,60" BackgroundColor="Transparent">
		<Label Text="The background should be transparent"
               Grid.Row="0"
               HorizontalOptions="Center"/>

		<Button Grid.Row="2" Text="Close" Clicked="CloseButtonClicked" />
	</Grid>
</mct:Popup>