<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:CommunityToolkit.Maui.Sample.Pages"
    xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
    xmlns:models="clr-namespace:CommunityToolkit.Maui.Sample.Models"
    xmlns:vm="clr-namespace:CommunityToolkit.Maui.Sample.ViewModels.Behaviors"
    x:Class="CommunityToolkit.Maui.Sample.Pages.Behaviors.AnimationBehaviorPage">
    <pages:BasePage.BindingContext>
        <vm:AnimationBehaviorViewModel />
    </pages:BasePage.BindingContext>
    <ScrollView>
        <VerticalStackLayout
                Spacing="15">
            <Label 
                Text="AnimationBehavor is a Behavior that can be attached to any VisualElement, allowing developers to trigger animations via ICommand AnimateCommand."/>
            <Label Text="ShakeAnimation" />
            <Button Text="Click me!">
                <Button.Behaviors>
                    <mct:AnimationBehavior Command="{Binding AnimationCommand}">
                        <mct:AnimationBehavior.AnimationType>
                            <models:SampleScaleAnimation 
                            Easing="{x:Static Easing.Linear}"
                            Length="100"/>
                        </mct:AnimationBehavior.AnimationType>
                    </mct:AnimationBehavior>
                </Button.Behaviors>
            </Button>

            <Label Text="Click me!">
                <Label.Behaviors>
                    <mct:AnimationBehavior Command="{Binding AnimationCommand}">
                        <mct:AnimationBehavior.AnimationType>
                            <models:SampleScaleAnimation 
                            Easing="{x:Static Easing.Linear}"
                            Length="100"/>
                        </mct:AnimationBehavior.AnimationType>
                    </mct:AnimationBehavior>
                </Label.Behaviors>
            </Label>

            <Frame BackgroundColor="LightGreen">
                <Frame.Behaviors>
                    <mct:AnimationBehavior Command="{Binding AnimationCommand}">
                        <mct:AnimationBehavior.AnimationType>
                            <models:SampleScaleAnimation 
                            Easing="{x:Static Easing.Linear}"
                            Length="100"/>
                        </mct:AnimationBehavior.AnimationType>
                    </mct:AnimationBehavior>
                </Frame.Behaviors>
                <Label Text="Click me!"/>
            </Frame>


        </VerticalStackLayout>
    </ScrollView>
</pages:BasePage>