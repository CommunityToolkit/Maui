<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage
    x:Class="CommunityToolkit.Maui.Sample.Pages.Views.RatingViewXamlPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:CommunityToolkit.Maui.Sample.Pages"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:CommunityToolkit.Maui.Sample.ViewModels.Views"
    Title="RatingView XAML"
    x:DataType="vm:RatingViewXamlViewModel"
    x:TypeArguments="vm:RatingViewXamlViewModel">
    <ScrollView>
        <VerticalStackLayout Padding="0,12,0,0" Spacing="12">
            <VerticalStackLayout.Resources>
                <ResourceDictionary>
                    <Style x:Key="Description" TargetType="Label">
                        <Setter Property="VerticalTextAlignment" Value="Start" />
                        <Setter Property="HorizontalTextAlignment" Value="Center" />
                        <Setter Property="LineBreakMode" Value="WordWrap" />
                        <Setter Property="Margin" Value="4,0" />
                    </Style>
                    <Style x:Key="HR" TargetType="Line">
                        <Setter Property="Stroke" Value="{AppThemeBinding Light=Black, Dark=White}" />
                        <Setter Property="X2" Value="300" />
                        <Setter Property="HorizontalOptions" Value="Center" />
                    </Style>
                    <Style TargetType="Switch">
                        <Setter Property="OnColor" Value="{StaticResource Gray400}" />
                        <Setter Property="ThumbColor" Value="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                        <Setter Property="VisualStateManager.VisualStateGroups">
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="On">
                                        <VisualState.Setters>
                                            <Setter Property="ThumbColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Off">
                                        <VisualState.Setters>
                                            <Setter Property="ThumbColor" Value="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </Setter>
                    </Style>
                    <Style TargetType="Slider">
                        <Setter Property="MinimumTrackColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                        <Setter Property="MaximumTrackColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" />
                        <Setter Property="ThumbColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                    </Style>
                </ResourceDictionary>
            </VerticalStackLayout.Resources>

            <Label Style="{StaticResource Description}" Text="RatingView showing different maximum ratings." />
            <Line Style="{StaticResource HR}" />
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Move slider to change maximum number of ratings, click/tap to set the ranking: " />
                        <Span x:Name="StepperValueMaximumRatingsCurrentRanking" Text="0" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Stepper
                Increment="1"
                Maximum="25"
                Minimum="1"
                SemanticProperties.Description="Change the rating maximum."
                Value="{Binding StepperValueMaximumRatings, Mode=TwoWay}" />
            <toolkit:RatingView
                CurrentRating="0"
                MaximumRating="{Binding StepperValueMaximumRatings, Mode=OneWay}"
                RatingChanged="StepperValueMaximumRatings_RatingChanged" />

            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="RatingView showing non transparent empty ratings." />
            <Line Style="{StaticResource HR}" />
            <Label Text="Empty background color: " />
            <Picker x:Name="ColorPickerEmptyBackground" SelectedIndexChanged="ColorPickerEmptyBackground_SelectedIndexChanged" />
            <toolkit:RatingView
                x:Name="ColorPickerEmptyBackgroundRatingView"
                CurrentRating="2.5"
                MaximumRating="5" />

            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="RatingView showing different rating sizing." />
            <Line Style="{StaticResource HR}" />
            <toolkit:RatingView
                CurrentRating="5"
                MaximumRating="5"
                Size="30" />
            <toolkit:RatingView
                CurrentRating="5"
                MaximumRating="5"
                Size="40" />
            <toolkit:RatingView
                CurrentRating="5"
                MaximumRating="5"
                Size="50" />
            <toolkit:RatingView
                CurrentRating="5"
                MaximumRating="5"
                Size="60" />

            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="RatingView showing different rating background colors." />
            <Line Style="{StaticResource HR}" />
            <toolkit:RatingView
                CurrentRating="5"
                FilledBackgroundColor="Red"
                MaximumRating="5" />
            <toolkit:RatingView
                CurrentRating="5"
                FilledBackgroundColor="Green"
                MaximumRating="5" />
            <toolkit:RatingView
                CurrentRating="5"
                FilledBackgroundColor="Blue"
                MaximumRating="5" />
            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="RatingView showing different rating border colors." />
            <Line Style="{StaticResource HR}" />
            <toolkit:RatingView
                CurrentRating="5"
                MaximumRating="5"
                RatingShapeOutlineColor="Red" />
            <toolkit:RatingView
                CurrentRating="5"
                MaximumRating="5"
                RatingShapeOutlineColor="Green" />
            <toolkit:RatingView
                CurrentRating="5"
                MaximumRating="5"
                RatingShapeOutlineColor="Blue" />
            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="RatingView showing different rating border thickness." />
            <Line Style="{StaticResource HR}" />
            <toolkit:RatingView
                CurrentRating="5"
                MaximumRating="5"
                RatingShapeOutlineColor="Red"
                RatingShapeOutlineThickness="1"
                Size="50" />
            <toolkit:RatingView
                CurrentRating="5"
                MaximumRating="5"
                RatingShapeOutlineColor="Green"
                RatingShapeOutlineThickness="3"
                Size="50" />
            <toolkit:RatingView
                CurrentRating="5"
                MaximumRating="5"
                RatingShapeOutlineColor="Blue"
                RatingShapeOutlineThickness="5"
                Size="50" />
            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="RatingView showing different rating shapes." />
            <Line Style="{StaticResource HR}" />
            <toolkit:RatingView
                CurrentRating="5"
                MaximumRating="5"
                RatingShapeOutlineThickness="1"
                Shape="Star"
                Size="40" />
            <toolkit:RatingView
                CurrentRating="5"
                MaximumRating="5"
                RatingShapeOutlineThickness="1"
                Shape="Circle"
                Size="40" />
            <toolkit:RatingView
                CurrentRating="5"
                MaximumRating="5"
                RatingShapeOutlineThickness="1"
                Shape="Heart"
                Size="40" />
            <toolkit:RatingView
                CurrentRating="5"
                MaximumRating="5"
                RatingShapeOutlineThickness="1"
                Shape="Like"
                Size="40" />
            <toolkit:RatingView
                CurrentRating="5"
                MaximumRating="5"
                RatingShapeOutlineThickness="1"
                Shape="Dislike"
                Size="40" />
