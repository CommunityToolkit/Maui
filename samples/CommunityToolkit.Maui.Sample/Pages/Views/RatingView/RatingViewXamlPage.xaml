                    ItemShapeSize="40"
                    MaximumRating="5"
                    Rating="5"
                    Shape="Custom"
                    ShapeBorderThickness="1" />
            </Grid>

            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="RatingView maximum ratings." />
            <Line Style="{StaticResource HR}" />
            <HorizontalStackLayout Spacing="8">
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Change maximum number of ratings: " />
                            <Span Text="{Binding Source={x:Reference StepperMaximumRating}, Path=Value}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Stepper
                    x:Name="StepperMaximumRating"
                    Increment="1"
                    Maximum="25"
                    Minimum="1"
                    SemanticProperties.Description="Change the maximum number of ratings." />
                <toolkit:RatingView MaximumRating="{Binding Source={x:Reference StepperMaximumRating}, Path=Value}" RatingChanged="StepperMaximumRating_RatingChanged" />
            </HorizontalStackLayout>

            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="RatingView colors." />
            <Line Style="{StaticResource HR}" />
            <Grid ColumnDefinitions="Auto,Auto,*,*" RowDefinitions="*,*,*,*">
                <Label
                    Grid.Row="0"
                    Grid.Column="2"
                    Text="Shape Fill" />
                <Label
                    Grid.Row="0"
                    Grid.Column="3"
                    Text="Item Fill" />
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="Empty rating background color: " />
                <Picker
                    Grid.Row="1"
                    Grid.Column="1"
                    ItemsSource="{Binding ColorsForPickers}"
                    SelectedIndex="{Binding ColorPickerEmptyBackgroundSelectedIndex}"
                    SemanticProperties.Description="Pick to change the empty rating background color.">
                    <Picker.Behaviors>
                        <toolkit:EventToCommandBehavior Command="{Binding ColorPickerEmptyBackgroundCommand}" EventName="SelectedIndexChanged" />
                    </Picker.Behaviors>
                </Picker>
                <toolkit:RatingView
                    Grid.Row="1"
                    Grid.Column="2"
                    EmptyBackgroundColor="{Binding ColorPickerEmptyBackgroundTarget}"
                    ItemShapeSize="40"
                    MaximumRating="5"
                    Rating="2.5" />
                <toolkit:RatingView
                    Grid.Row="1"
                    Grid.Column="3"
                    EmptyBackgroundColor="{Binding ColorPickerEmptyBackgroundTarget}"
                    ItemShapeSize="40"
                    MaximumRating="5"
                    Rating="2.5"
                    RatingFill="Item" />

                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="Filled rating background color: " />
                <Picker
                    Grid.Row="2"
                    Grid.Column="1"
                    ItemsSource="{Binding ColorsForPickers}"
                    SelectedIndex="{Binding ColorPickerFilledBackgroundSelectedIndex}"
                    SemanticProperties.Description="Pick to change the filled rating background color.">
                    <Picker.Behaviors>
                        <toolkit:EventToCommandBehavior Command="{Binding ColorPickerFilledBackgroundCommand}" EventName="SelectedIndexChanged" />
                    </Picker.Behaviors>
                </Picker>
                <toolkit:RatingView
                    Grid.Row="2"
                    Grid.Column="2"
                    FilledBackgroundColor="{Binding ColorPickerFilledBackgroundTarget}"
                    ItemShapeSize="40"
                    MaximumRating="5"
                    Rating="2.5" />
                <toolkit:RatingView
                    Grid.Row="2"
                    Grid.Column="3"
                    FilledBackgroundColor="{Binding ColorPickerFilledBackgroundTarget}"
                    ItemShapeSize="40"
                    MaximumRating="5"
                    Rating="2.5"
                    RatingFill="Item" />
                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    Text="Rating shape border color:" />
                <Picker
                    Grid.Row="3"
                    Grid.Column="1"
                    ItemsSource="{Binding ColorsForPickers}"
                    SelectedIndex="{Binding ColorPickerRatingShapeBorderColorSelectedIndex}"
                    SemanticProperties.Description="Pick to change the rating shape border color.">
                    <Picker.Behaviors>
                        <toolkit:EventToCommandBehavior Command="{Binding ColorPickerRatingShapeBorderColorCommand}" EventName="SelectedIndexChanged" />
                    </Picker.Behaviors>
                </Picker>
                <toolkit:RatingView
                    Grid.Row="3"
                    Grid.Column="2"
                    ItemShapeSize="40"
                    MaximumRating="5"
                    Rating="2.5"
                    ShapeBorderColor="{Binding ColorPickerRatingShapeBorderColorTarget}"
                    ShapeBorderThickness="3" />
                <toolkit:RatingView
                    Grid.Row="3"
                    Grid.Column="3"
                    ItemShapeSize="40"
                    MaximumRating="5"
                    Rating="2.5"
                    RatingFill="Item"
                    ShapeBorderColor="{Binding ColorPickerRatingShapeBorderColorTarget}"
                    ShapeBorderThickness="3" />
            </Grid>

            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="RatingView shape border thickness." />
            <Line Style="{StaticResource HR}" />
            <HorizontalStackLayout Spacing="8">
                <Stepper
                    x:Name="StepperShapeBorderThickness"
                    Increment="1"
                    Maximum="10"
                    Minimum="0"
                    SemanticProperties.Description="Change the rating shape border thickness. TODO" />
                <toolkit:RatingView
                    MaximumRating="5"
                    Rating="2.5"
                    ShapeBorderThickness="{Binding Source={x:Reference StepperShapeBorderThickness}, Path=Value}" />
            </HorizontalStackLayout>

            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="RatingView enable and disable. Rating can only bechanged when enabled." />
            <Line Style="{StaticResource HR}" />
            <HorizontalStackLayout HorizontalOptions="Start">
                <Switch x:Name="RatingViewIsEnabled" IsToggled="False" />
                <Label Text="IsEnabled" />
            </HorizontalStackLayout>
            <toolkit:RatingView
                IsEnabled="{Binding Source={x:Reference RatingViewIsEnabled}, Path=IsToggled}"
                MaximumRating="5"
                Rating="2.5" />

            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="RatingView shape padding." />
            <Line Style="{StaticResource HR}" />
            <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,*" RowDefinitions="*,*,*,*,*,*">
                <Label
                    Grid.Row="0"
                    Grid.Column="2"
                    HorizontalOptions="Center"
                    Text="Top" />
                <Stepper
                    Grid.Row="1"
                    Grid.Column="2"
                    Increment="1"
                    Maximum="10"
                    Minimum="0"
                    SemanticProperties.Description="Change the rating view padding top."
                    Value="{Binding RatingViewShapePaddingTop}">
                    <Stepper.Behaviors>
                        <toolkit:EventToCommandBehavior Command="{Binding RatingViewShapePaddingTopCommandCommand}" EventName="ValueChanged" />
                    </Stepper.Behaviors>
                </Stepper>
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="Left"
                    VerticalOptions="Center" />
                <Stepper
                    Grid.Row="2"
                    Grid.Column="1"
                    Increment="1"
                    Maximum="10"
                    Minimum="0"
                    SemanticProperties.Description="Change the rating view padding left."
                    Value="{Binding RatingViewShapePaddingLeft}">
                    <Stepper.Behaviors>
                        <toolkit:EventToCommandBehavior Command="{Binding RatingViewShapePaddingLeftCommandCommand}" EventName="ValueChanged" />
                    </Stepper.Behaviors>
                </Stepper>
                <Stepper
                    Grid.Row="2"
                    Grid.Column="3"
                    Increment="1"
                    Maximum="10"
                    Minimum="0"
                    SemanticProperties.Description="Change the rating view padding right."
                    Value="{Binding RatingViewShapePaddingRight}">
                    <Stepper.Behaviors>
                        <toolkit:EventToCommandBehavior Command="{Binding RatingViewShapePaddingRightCommandCommand}" EventName="ValueChanged" />
                    </Stepper.Behaviors>
                </Stepper>
                <Label
                    Grid.Row="2"
                    Grid.Column="4"
                    Text="Right"
                    VerticalOptions="Center" />
                <Stepper
                    Grid.Row="3"
                    Grid.Column="2"
                    Increment="1"
                    Maximum="10"
                    Minimum="0"
                    SemanticProperties.Description="Change the rating view padding bottom."
                    Value="{Binding RatingViewShapePaddingBottom}">
                    <Stepper.Behaviors>
                        <toolkit:EventToCommandBehavior Command="{Binding RatingViewShapePaddingBottomCommandCommand}" EventName="ValueChanged" />
                    </Stepper.Behaviors>
                </Stepper>
                <Label
                    Grid.Row="4"
                    Grid.Column="2"
                    Text="Bottom" />
                <Label
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="5"
                    HorizontalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Padding(" />
                            <Span Text="{Binding RatingViewShapePaddingLeft, Mode=OneWay}" />
                            <Span Text=", " />
                            <Span Text="{Binding RatingViewShapePaddingTop, Mode=OneWay}" />
                            <Span Text=", " />
                            <Span Text="{Binding RatingViewShapePaddingRight, Mode=OneWay}" />
                            <Span Text=", " />
                            <Span Text="{Binding RatingViewShapePaddingBottom, Mode=OneWay}" />
                            <Span Text=")" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <toolkit:RatingView
                    Grid.Row="0"
                    Grid.RowSpan="4"
                    Grid.Column="5"
                    BackgroundColor="Purple"
                    ItemPadding="{Binding RatingViewShapePaddingValue, Mode=OneWay}"
                    MaximumRating="5"
                    Rating="4.5"
                    VerticalOptions="Center" />
            </Grid>
            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="RatingView showing different rating sizing." />
            <Line Style="{StaticResource HR}" />
            <toolkit:RatingView
                ItemShapeSize="30"
                MaximumRating="5"
                Rating="5" />
            <toolkit:RatingView
                ItemShapeSize="40"
                MaximumRating="5"
                Rating="5" />
            <toolkit:RatingView
                ItemShapeSize="50"
                MaximumRating="5"
                Rating="5" />
            <toolkit:RatingView
                ItemShapeSize="60"
                MaximumRating="5"
                Rating="5" />

            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="RatingView spacing." />
            <Line Style="{StaticResource HR}" />
            <Stepper
                x:Name="StepperSpacing"
                Increment="1"
                Maximum="25"
                Minimum="0"
                SemanticProperties.Description="Change the spacing between rating shapes." />
            <toolkit:RatingView
                MaximumRating="5"
                Rating="2.5"
                Spacing="{Binding Source={x:Reference StepperSpacing}, Path=Value}" />
        </VerticalStackLayout>
    </ScrollView>
</pages:BasePage>        