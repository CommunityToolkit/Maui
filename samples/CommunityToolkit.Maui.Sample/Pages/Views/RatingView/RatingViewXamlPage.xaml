<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage
    x:Class="CommunityToolkit.Maui.Sample.Pages.Views.RatingViewXamlPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:CommunityToolkit.Maui.Sample.Pages"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:CommunityToolkit.Maui.Sample.ViewModels.Views"
    Title="RatingView XAML syntax"
    x:DataType="vm:RatingViewXamlViewModel"
    x:TypeArguments="vm:RatingViewXamlViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="0,12,0,0" Spacing="12">
            <VerticalStackLayout.Resources>
                <ResourceDictionary>
                    <Style x:Key="Description" TargetType="Label">
                        <Setter Property="VerticalTextAlignment" Value="Start" />
                        <Setter Property="HorizontalTextAlignment" Value="Center" />
                        <Setter Property="LineBreakMode" Value="WordWrap" />
                        <Setter Property="Margin" Value="4,0" />
                    </Style>
                    <Style x:Key="HR" TargetType="Line">
                        <Setter Property="Stroke" Value="{AppThemeBinding Light=Black, Dark=White}" />
                        <Setter Property="X2" Value="300" />
                        <Setter Property="HorizontalOptions" Value="Center" />
                    </Style>
                    <Style x:Key="ByStyle" TargetType="toolkit:RatingView">
                        <Setter x:DataType="Color" Property="EmptyColor">Green</Setter>
                        <Setter x:DataType="Color" Property="FilledColor">Blue</Setter>
                        <Setter x:DataType="Color" Property="BackgroundColor">Red</Setter>
                    </Style>
                </ResourceDictionary>
            </VerticalStackLayout.Resources>
            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="Defaults" />
            <Line Style="{StaticResource HR}" />
            <HorizontalStackLayout Spacing="8">
                <Label Text="Default" VerticalOptions="Center" />
                <toolkit:RatingView SemanticProperties.Description="A RatingView showing the defaults." />
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="8">
                <Label Text="By properties" VerticalOptions="Center" />
                <toolkit:RatingView
                    BackgroundColor="Red"
                    EmptyColor="Green"
                    FilledColor="Blue"
                    MaximumRating="5"
                    Rating="2.5"
                    SemanticProperties.Description="A RatingView customised by setting properties." />
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="8">
                <Label Text="By style" VerticalOptions="Center" />
                <toolkit:RatingView
                    MaximumRating="5"
                    Rating="2.5"
                    SemanticProperties.Description="A RatingView customised by setting a style."
                    Style="{StaticResource ByStyle}" />
            </HorizontalStackLayout>
            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="Available Shapes, and example custom shape" />
            <Line Style="{StaticResource HR}" />
            <Grid
                ColumnDefinitions="Auto,*"
                ColumnSpacing="8"
                RowDefinitions="*,*,*,*,*,*,*"
                SemanticProperties.Description="A table showing different 'ItemShape' available for the RatingView.">
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="Star"
                    VerticalOptions="Center" />
                <toolkit:RatingView
                    Grid.Row="0"
                    Grid.Column="1"
                    EmptyColor="White"
                    FilledColor="Blue"
                    ItemShapeSize="40"
                    MaximumRating="5"
                    Rating="2"
                    SemanticProperties.Description="A RatingView showing the 'Star' shape."
                    ItemShape="Star"
                    ShapeBorderThickness="1" />
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="Circle"
                    VerticalOptions="Center" />
                <toolkit:RatingView
                    Grid.Row="1"
                    Grid.Column="1"
                    EmptyColor="Red"
                    FilledColor="Blue"
                    ItemShapeSize="40"
                    MaximumRating="5"
                    Rating="2"
                    SemanticProperties.Description="A RatingView showing the 'Circle' shape."
                    ItemShape="Circle"
                    ShapeBorderThickness="1" />
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="Heart"
                    VerticalOptions="Center" />
                <toolkit:RatingView
                    Grid.Row="2"
                    Grid.Column="1"
                    FilledColor="White"
                    ItemShapeSize="40"
                    MaximumRating="5"
                    Rating="5"
                    SemanticProperties.Description="A RatingView showing the 'Heart' shape."
                    ItemShape="Heart"
                    ShapeBorderThickness="1" />
                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    Text="Like"
                    VerticalOptions="Center" />
                <toolkit:RatingView
                    Grid.Row="3"
                    Grid.Column="1"
                    FilledColor="Red"
                    ItemShapeSize="40"
                    MaximumRating="5"
                    Rating="5"
                    SemanticProperties.Description="A RatingView showing the 'Like' shape."
                    ItemShape="Like"
                    ShapeBorderThickness="1" />
                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    Text="Dislike"
                    VerticalOptions="Center" />
                <toolkit:RatingView
                    Grid.Row="4"
                    Grid.Column="1"
                    FilledColor="White"
                    ItemShapeSize="40"
                    MaximumRating="5"
                    Rating="5"
                    SemanticProperties.Description="A RatingView showing the 'Dislike' shape."
                    ItemShape="Dislike"
                    ShapeBorderThickness="1" />
                <Label
                    Grid.Row="5"
                    Grid.Column="0"
                    Text="Custom"
                    VerticalOptions="Center" />
                <toolkit:RatingView
                    Grid.Row="5"
                    Grid.Column="1"
