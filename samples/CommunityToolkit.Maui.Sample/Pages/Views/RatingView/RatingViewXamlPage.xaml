                    FilledColor="Red"
                    ItemShapeSize="40"
                    MaximumRating="5"
                    Rating="5"
                    SemanticProperties.Description="A RatingView showing the 'Custom' shape and passing in the required custom shape path."
                    ItemShape="Custom"
                    ShapeBorderThickness="1" />
                <Label
                    Grid.Row="6"
                    Grid.Column="0"
                    Text="Custom"
                    VerticalOptions="Center" />
                <toolkit:RatingView
                    Grid.Row="6"
                    Grid.Column="1"
                    CustomItemShape="M23.07 8h2.89l-6.015 5.957a5.621 5.621 0 01-7.89 0L6.035 8H8.93l4.57 4.523a3.556 3.556 0 004.996 0L23.07 8zM8.895 24.563H6l6.055-5.993a5.621 5.621 0 017.89 0L26 24.562h-2.895L18.5 20a3.556 3.556 0 00-4.996 0l-4.61 4.563z"
                    EmptyColor="Red"
                    FilledColor="White"
                    ItemShapeSize="40"
                    MaximumRating="5"
                    Rating="5"
                    SemanticProperties.Description="A RatingView showing the 'Custom' shape and passing in the required custom shape path."
                    ItemShape="Custom"
                    ShapeBorderColor="Grey"
                    ShapeBorderThickness="1" />
            </Grid>

            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="Maximum ratings" />
            <Line Style="{StaticResource HR}" />
            <HorizontalStackLayout Spacing="8">
                <Stepper
                    x:Name="StepperMaximumRating"
                    Increment="1"
                    Maximum="25"
                    Minimum="1"
                    SemanticProperties.Hint="Change the maximum number of ratings." />
                <Label VerticalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text=": " />
                            <Span Text="{Binding Source={x:Reference StepperMaximumRating}, Path=Value}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </HorizontalStackLayout>
            <toolkit:RatingView
                MaximumRating="{Binding Source={x:Reference StepperMaximumRating}, Path=Value}"
                RatingChanged="StepperMaximumRating_RatingChanged"
                SemanticProperties.Description="A RatingView showing changes to the 'MaximumRating' property and with an event handler when the 'RatingChanged' event is triggered." />

            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="Colors" />
            <Line Style="{StaticResource HR}" />
            <HorizontalStackLayout Spacing="8">
                <Label Text="Empty color: " VerticalOptions="Center" />
                <Picker
                    ItemsSource="{Binding ColorsForPickers}"
                    SelectedIndex="{Binding ColorPickerEmptyBackgroundSelectedIndex}"
                    SemanticProperties.Hint="Pick to change the empty rating color.">
                    <Picker.Behaviors>
                        <toolkit:EventToCommandBehavior Command="{Binding ColorPickerEmptyBackgroundCommand}" EventName="SelectedIndexChanged" />
                    </Picker.Behaviors>
                </Picker>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="8">

                <Label Text="Filled color: " VerticalOptions="Center" />
                <Picker
                    ItemsSource="{Binding ColorsForPickers}"
                    SelectedIndex="{Binding ColorPickerFilledBackgroundSelectedIndex}"
                    SemanticProperties.Hint="Pick to change the filled rating color.">
                    <Picker.Behaviors>
                        <toolkit:EventToCommandBehavior Command="{Binding ColorPickerFilledBackgroundCommand}" EventName="SelectedIndexChanged" />
                    </Picker.Behaviors>
                </Picker>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="8">
                <Label Text="ItemShape border color: " VerticalOptions="Center" />
                <Picker
                    ItemsSource="{Binding ColorsForPickers}"
                    SelectedIndex="{Binding ColorPickerRatingShapeBorderColorSelectedIndex}"
                    SemanticProperties.Hint="Pick to change the rating shape border color.">
                    <Picker.Behaviors>
                        <toolkit:EventToCommandBehavior Command="{Binding ColorPickerRatingShapeBorderColorCommand}" EventName="SelectedIndexChanged" />
                    </Picker.Behaviors>
                </Picker>
            </HorizontalStackLayout>
            <Label Text="ItemShape Fill" />
            <toolkit:RatingView
                EmptyColor="{Binding ColorPickerEmptyBackgroundTarget}"
                FilledColor="{Binding ColorPickerFilledBackgroundTarget}"
                HorizontalOptions="Start"
                ItemShapeSize="40"
                MaximumRating="5"
                Rating="2.7"
                RatingFill="Shape"
                SemanticProperties.Description="A RatingView showing the fill, empty and border color changes, shown using the fill type of 'ItemShape'."
                ShapeBorderColor="{Binding ColorPickerRatingShapeBorderColorTarget}"
                ShapeBorderThickness="1" />
            <Label Text="Item Fill" />
            <toolkit:RatingView
                EmptyColor="{Binding ColorPickerEmptyBackgroundTarget}"
                FilledColor="{Binding ColorPickerFilledBackgroundTarget}"
                HorizontalOptions="Start"
                ItemShapeSize="40"
                MaximumRating="5"
                Rating="2.7"
                RatingFill="Item"
                SemanticProperties.Description="A RatingView showing the fill, empty and border color changes, shown using the fill type of 'Item'."
                ShapeBorderColor="{Binding ColorPickerRatingShapeBorderColorTarget}"
                ShapeBorderThickness="1" />
            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="ItemShape border thickness" />
            <Line Style="{StaticResource HR}" />
            <HorizontalStackLayout Spacing="8">
                <Stepper
                    x:Name="StepperShapeBorderThickness"
                    Increment="1"
                    Maximum="10"
                    Minimum="0"
                    SemanticProperties.Hint="Change the rating shape border thickness." />
                <Label VerticalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text=": " />
                                <Span Text="{Binding Source={x:Reference StepperShapeBorderThickness}, Path=Value}" />
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </HorizontalStackLayout>
            <toolkit:RatingView
                MaximumRating="5"
                Rating="2.5"
                SemanticProperties.Description="A RatingView showing the shape border thickness changes."
                ShapeBorderThickness="{Binding Source={x:Reference StepperShapeBorderThickness}, Path=Value}" />

            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="Read only" />
            <Line Style="{StaticResource HR}" />
            <HorizontalStackLayout Spacing="8">
                <CheckBox
                    x:Name="RatingViewIsReadOnly"
                    BackgroundColor="{AppThemeBinding Light=Black,
                                                      Dark=White}"
                    IsChecked="True"
                    SemanticProperties.Hint="Check to make read only."
                    Color="{AppThemeBinding Light=White,
                                            Dark=Black}" />
                <Label Text=": IsReadOnly" VerticalOptions="Center" />
            </HorizontalStackLayout>
            <toolkit:RatingView
                IsReadOnly="{Binding Source={x:Reference RatingViewIsReadOnly}, Path=IsChecked}"
                MaximumRating="5"
                Rating="2.5"
                SemanticProperties.Description="A RatingView showing the IsReadOnly changes." />

            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="ItemShape padding" />
            <Line Style="{StaticResource HR}" />
            <HorizontalStackLayout Spacing="8">
                <Stepper
                    Increment="1"
                    Maximum="10"
                    Minimum="0"
                    SemanticProperties.Hint="Change the rating view padding left."
                    Value="{Binding RatingViewShapePaddingLeft}">
                    <Stepper.Behaviors>
                        <toolkit:EventToCommandBehavior Command="{Binding RatingViewShapePaddingLeftCommandCommand}" EventName="ValueChanged" />
                    </Stepper.Behaviors>
                </Stepper>
                <Label SemanticProperties.Description="ItemShape left padding applied to the RatingView sample." VerticalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text=": Left: " />
                            <Span Text="{Binding RatingViewShapePaddingLeft, Mode=OneWay}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="8">
                <Stepper
                    Increment="1"
                    Maximum="10"
                    Minimum="0"
                    SemanticProperties.Hint="Change the rating view padding top."
                    Value="{Binding RatingViewShapePaddingTop}">
                    <Stepper.Behaviors>
                        <toolkit:EventToCommandBehavior Command="{Binding RatingViewShapePaddingTopCommandCommand}" EventName="ValueChanged" />
                    </Stepper.Behaviors>
                </Stepper>
                <Label SemanticProperties.Description="ItemShape top padding applied to the RatingView sample." VerticalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text=": Top: " />
                            <Span Text="{Binding RatingViewShapePaddingTop, Mode=OneWay}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="8">
                <Stepper
                    Increment="1"
                    Maximum="10"
                    Minimum="0"
                    SemanticProperties.Hint="Change the rating view padding right."
                    Value="{Binding RatingViewShapePaddingRight}">
                    <Stepper.Behaviors>
                        <toolkit:EventToCommandBehavior Command="{Binding RatingViewShapePaddingRightCommandCommand}" EventName="ValueChanged" />
                    </Stepper.Behaviors>
                </Stepper>
                <Label SemanticProperties.Description="ItemShape right padding applied to the RatingView sample." VerticalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text=": Right: " />
                            <Span Text="{Binding RatingViewShapePaddingRight, Mode=OneWay}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="8">
                <Stepper
                    Increment="1"
                    Maximum="10"
                    Minimum="0"
                    SemanticProperties.Hint="Change the rating view padding bottom."
                    Value="{Binding RatingViewShapePaddingBottom}">
                    <Stepper.Behaviors>
                        <toolkit:EventToCommandBehavior Command="{Binding RatingViewShapePaddingBottomCommandCommand}" EventName="ValueChanged" />
                    </Stepper.Behaviors>
                </Stepper>
                <Label SemanticProperties.Description="ItemShape bottom padding applied to the RatingView sample." VerticalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text=": Bottom: " />
                            <Span Text="{Binding RatingViewShapePaddingBottom, Mode=OneWay}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </HorizontalStackLayout>
            <toolkit:RatingView
                BackgroundColor="Purple"
                HorizontalOptions="Start"
                ItemPadding="{Binding RatingViewShapePaddingValue, Mode=OneWay}"
                MaximumRating="5"
                Rating="4.5"
                SemanticProperties.Description="A RatingView sample showing the padding changes."
                VerticalOptions="Center" />

            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="Rating" />
            <Line Style="{StaticResource HR}" />
            <Slider
                x:Name="RatingRatingView"
                Maximum="7"
                Minimum="0"
                SemanticProperties.Hint="Slide to change the rating."
                Value="0" />
            <Label
                HorizontalOptions="Center"
                SemanticProperties.Description="RatingView rating value."
                VerticalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text=": " />
                        <Span Text="{Binding Source={x:Reference RatingRatingView}, Path=Value, StringFormat='{0:F2}'}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label Text="ItemShape Fill" />
            <toolkit:RatingView
                BackgroundColor="Purple"
                EmptyColor="Blue"
                FilledColor="Green"
                HorizontalOptions="Start"
                IsReadOnly="False"
                ItemShapeSize="30"
                MaximumRating="7"
                Rating="{Binding Source={x:Reference RatingRatingView}, Path=Value}"
                RatingFill="Shape"
                SemanticProperties.Description="A RatingView sample showing the rating changes and the fill type of 'ItemShape'."
                ShapeBorderColor="Grey"
                ShapeBorderThickness="1"
                Spacing="3" />
            <Label Text="Item Fill" />
            <toolkit:RatingView
                BackgroundColor="Purple"
                EmptyColor="Blue"
                FilledColor="Green"
                HorizontalOptions="Start"
                IsReadOnly="False"
                ItemShapeSize="30"
                MaximumRating="7"
                Rating="{Binding Source={x:Reference RatingRatingView}, Path=Value}"
                RatingFill="Item"
                SemanticProperties.Description="A RatingView sample showing the rating changes and the fill type of 'Item'."
                ShapeBorderColor="Grey"
                ShapeBorderThickness="1"
                Spacing="3" />

            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="Sizing" />
            <Line Style="{StaticResource HR}" />
            <toolkit:RatingView
                ItemShapeSize="30"
                MaximumRating="5"
                Rating="5"
                SemanticProperties.Description="A RatingView sample showing the size of 30" />
            <toolkit:RatingView
                ItemShapeSize="40"
                MaximumRating="5"
                Rating="5"
                SemanticProperties.Description="A RatingView sample showing the size of 40" />
            <toolkit:RatingView
                ItemShapeSize="50"
                MaximumRating="5"
                Rating="5"
                SemanticProperties.Description="A RatingView sample showing the size of 50" />
            <toolkit:RatingView
                ItemShapeSize="60"
                MaximumRating="5"
                Rating="5"
                SemanticProperties.Description="A RatingView sample showing the size of 60" />

            <Line Style="{StaticResource HR}" />
            <Label Style="{StaticResource Description}" Text="Spacing" />
            <Line Style="{StaticResource HR}" />
            <HorizontalStackLayout Spacing="8">
                <Stepper
                    x:Name="StepperSpacing"
                    Increment="1"
                    Maximum="25"
                    Minimum="0"
                    SemanticProperties.Hint="Change the spacing between rating items." />
                <Label VerticalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text=": " />
                            <Span Text="{Binding Source={x:Reference StepperSpacing}, Path=Value}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </HorizontalStackLayout>
            <toolkit:RatingView
                MaximumRating="5"
                Rating="2.5"
                SemanticProperties.Description="A RatingView sample showing the spacing changes."
                Spacing="{Binding Source={x:Reference StepperSpacing}, Path=Value}" />
        </VerticalStackLayout>
    </ScrollView>
</pages:BasePage>        