        </Grid>
        <mct:AvatarView
            HeightRequest="62"
            SemanticProperties.Description="Sample large AvatarView showing using a URL image."
            Style="{StaticResource AvatarViewImagesLarge}"
            WidthRequest="62">
                <mct:AvatarView.ImageSource>
                    <UriImageSource
                    CacheValidity="1"
                    CachingEnabled="True"
                    Uri="https://aka.ms/campus.jpg" />
                </mct:AvatarView.ImageSource>
            </mct:AvatarView>
    </VerticalStackLayout>
</pages:BasePage>