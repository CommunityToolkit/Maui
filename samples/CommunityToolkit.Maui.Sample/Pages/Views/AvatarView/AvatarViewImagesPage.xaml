            ColumnDefinitions="Auto" 
            HorizontalOptions="Center"
            RowDefinitions="Auto">
            <mct:AvatarView
                HeightRequest="62"
                SemanticProperties.Description="Sample large AvatarView showing using a local image."
                Style="{StaticResource AvatarViewImagesLargeLocal}"
                WidthRequest="62" />
            <Path 
